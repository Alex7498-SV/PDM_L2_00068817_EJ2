<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="3"
    android:rowCount="3"
    android:layout_marginTop="80dp"
    >

    <ImageView
        android:id="@+id/sector1"
        android:layout_width="@dimen/general"
        android:layout_height="@dimen/general"
        android:layout_columnWeight="1"
        android:layout_column="0"
        android:layout_row="0"
        android:src="@drawable/src1"/>
    <ImageView
        android:id="@+id/sector2"
        android:layout_width="@dimen/general"
        android:layout_height="@dimen/general"
        android:layout_columnWeight="1"
        android:layout_column="1"
        android:layout_row="0"
        android:src="@drawable/src2"/>

    <ImageView
        android:id="@+id/sector3"
        android:layout_width="@dimen/general"
        android:layout_height="@dimen/general"
        android:layout_columnWeight="1"
        android:layout_column="2"
        android:layout_row="0"
        android:src="@drawable/src3"/>

    <ImageView
        android:id="@+id/sector4"
        android:layout_width="@dimen/general"
        android:layout_height="@dimen/general"
        android:layout_columnWeight="1"
        android:layout_column="0"
        android:layout_row="1"
        android:src="@drawable/src2"/>

    <ImageView
        android:id="@+id/sector5"
        android:layout_width="@dimen/general"
        android:layout_height="@dimen/general"
        android:layout_columnWeight="1"
        android:layout_column="1"
        android:layout_row="1"
        android:src="@drawable/src1"/>

    <ImageView
        android:id="@+id/sector6"
        android:layout_width="@dimen/general"
        android:layout_height="@dimen/general"
        android:layout_columnWeight="1"
        android:layout_column="2"
        android:layout_row="1"
        android:src="@drawable/src3"/>

    <ImageView
        android:id="@+id/sector7"
        android:layout_width="@dimen/general"
        android:layout_height="@dimen/general"
        android:layout_columnWeight="1"
        android:layout_column="0"
        android:layout_row="2"
        android:src="@drawable/src3"/>

    <ImageView
        android:id="@+id/sector8"
        android:layout_width="@dimen/general"
        android:layout_height="@dimen/general"
        android:layout_columnWeight="1"
        android:layout_column="1"
        android:layout_row="2"
        android:src="@drawable/src2"/>

    <ImageView
        android:id="@+id/sector9"
        android:layout_width="@dimen/general"
        android:layout_height="@dimen/general"
        android:layout_columnWeight="1"
        android:layout_column="2"
        android:layout_row="2"
        android:src="@drawable/src1"/>

</GridLayout>